<Window x:Class="DummyDB_5.CreateDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DummyDB_5"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Create DataBase" Height="200" Width="450">
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center">Ваше название</TextBlock>
        <TextBox x:Name="DB_name" Grid.Row="1" Margin="100,0,100,0"/>
        <TextBlock Text="Выберите место хранения БД" Grid.Row="2" HorizontalAlignment="Center"/>
        <Button Command="{Binding Choose_Place}" Grid.Row="3" Content="Выбрать место" Margin="100,0,100,0"/>

        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,10,0">
            <Button IsDefault="True" Command="{Binding Create_Click}" MinWidth="60" Content="OK"/>
            <Button IsCancel="True" MinWidth="60" Content="Отмена"/>
        </WrapPanel>
    </Grid>
</Window>
